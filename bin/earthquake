#!/usr/bin/env ruby
require 'slop'
require 'pathname'

argv = ARGV.dup
opts = Slop.parse! argv, :help => true do
  banner "Usage: earthquake [options] [directory]"
  on :d, :debug, 'Enable debug mode'
end
options = opts.to_hash(true)
options.delete(:help)
options[:dir] = argv.shift unless argv.empty?

TOP = Pathname.new(File.dirname(__FILE__)).realpath + '..'
$:.unshift((TOP + 'lib').to_s) if $0 == __FILE__

print "\e[31m"
puts %q{
                 _   _                       _
  ___  __ _ _ __| |_| |__   __ _ _   _  __ _| | _____
 / _ \/ _` | '__| __| '_ \ / _` | | | |/ _` | |/ / _ \
|  __/ (_| | |  | |_| | | | (_| | |_| | (_| |   <  __/
 \___|\__,_|_|   \__|_| |_|\__, |\__,_|\__,_|_|\_\___|
                              |_|           }.
gsub(/^\n/, '') + "v#{(TOP + 'VERSION').read}".rjust(10) + "\n\n"
print "\e[0m"

require 'earthquake'
Earthquake.start(options)